#include <stdio.h>

int main() {
    int n, i;
    float sum = 0, num, avg;

    printf("Enter the number of integers you want to sum: ");
    scanf("%d", &n);

    for (i = 0; i < n; i++) {
        printf("Enter an integer: ");
        scanf("%f", &num);
        sum += num;
    }

    avg = sum / n;

    printf("The sum of the %d integers is %.2f\n", n, sum);
    printf("The average of the %d integers is %.2f\n", n, avg);

    return 0;
}
